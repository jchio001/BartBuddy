<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RealTimeLegCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/background_primary_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InversePrimaryButtonStyle">
        <item name="android:background">@drawable/background_inverse_primary_button</item>
        <item name="android:textColor">@color/bart_blue</item>
    </style>


</resources>
