<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:background="@color/bart_blue"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/origin_station_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/swap_icon"
            android:background="@drawable/background_rounded_corners"
            android:hint="@string/origin_station"
            android:padding="6dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/destination_station_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_station_textview"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/swap_icon"
            android:background="@drawable/background_rounded_corners"
            android:hint="@string/destination_station"
            android:padding="6dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint_white"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/swap_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_swap_vertical"
            />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:lineSpacingExtra="-4dp"
        android:text="@string/navigate"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        style="@style/InversePrimaryButtonStyle"
        >

    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>
