<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout"
    >

    <View
        android:id="@+id/train_color_indicator"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/destination_textview"
        android:layout_alignBottom="@+id/destination_textview"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp"
        tools:background="@color/bart_blue"
        />

    <TextView
        android:id="@+id/destination_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/train_color_indicator"
        android:textColor="@color/black"
        android:textSize="32sp"
        tools:text="Flavortown"
        />

    <TextView
        android:id="@+id/time_until_arrival_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/destination_textview"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:text="73"
        />

</merge>
