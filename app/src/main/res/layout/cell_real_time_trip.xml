<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <View
        android:id="@+id/train_color_indicator"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/destination_textview"
        android:layout_alignBottom="@+id/destination_textview"
        android:layout_marginRight="4dp"
        android:background="@color/bart_blue"/>

    <TextView
        android:id="@+id/destination_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/train_color_indicator"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/time_until_arrival_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/destination_textview"
        android:gravity="end"
        android:textSize="28sp"/>

</RelativeLayout>